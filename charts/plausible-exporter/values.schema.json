{
    "$schema": "http://json-schema.org/schema#",
    "type": "object",
    "properties": {
        "controller": {
            "type": "object",
            "properties": {
                "annotations": {
                    "type": "object"
                },
                "enabled": {
                    "type": "boolean"
                },
                "kind": {
                    "type": "string"
                },
                "labels": {
                    "type": "object"
                },
                "replicas": {
                    "type": "integer"
                }
            }
        },
        "env": {
            "type": "array",
            "items": {
                "type": "object",
                "properties": {
                    "name": {
                        "type": "string"
                    },
                    "value": {
                        "type": "string"
                    }
                }
            }
        },
        "fullnameOverride": {
            "type": "string"
        },
        "image": {
            "type": "object",
            "properties": {
                "pullPolicy": {
                    "type": "string"
                },
                "repository": {
                    "type": "string"
                },
                "tag": {
                    "type": "string"
                }
            }
        },
        "nameOverride": {
            "type": "string"
        },
        "ports": {
            "type": "object",
            "properties": {
                "metrics": {
                    "type": "object",
                    "properties": {
                        "enabled": {
                            "type": "boolean"
                        },
                        "port": {
                            "type": "integer"
                        },
                        "protocol": {
                            "type": "string"
                        }
                    }
                }
            }
        },
        "resources": {
            "type": "object"
        },
        "service": {
            "type": "object",
            "properties": {
                "annotations": {
                    "type": "object"
                },
                "enabled": {
                    "type": "boolean"
                },
                "labels": {
                    "type": "object"
                },
                "type": {
                    "type": "string"
                }
            }
        },
        "serviceAccount": {
            "type": "object",
            "properties": {
                "name": {
                    "type": "string"
                }
            }
        },
        "serviceMonitor": {
            "type": "object",
            "properties": {
                "annotations": {
                    "type": "object"
                },
                "enabled": {
                    "type": "boolean"
                },
                "interval": {
                    "type": "string"
                },
                "labels": {
                    "type": "object"
                },
                "timeout": {
                    "type": "string"
                }
            }
        }
    }
}
